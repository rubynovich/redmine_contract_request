%p
  %label= l(:label_contract_request_manager_plural)
  = select_tag("settings[principal_id]", principals_options_for_select(Principal.active.sorted, Principal.find_by_id(@settings[:principal_id])), prompt: t(:prompt_please_select))
%p
  %label= l(:label_project)
  = select_tag("settings[project_id]", project_tree_options_for_select(Project.active.order(:name), selected: Project.find_by_id(@settings[:project_id])), prompt: t(:prompt_please_select))
%p
  %label= l(:label_tracker)
  = select_tag("settings[tracker_id]", options_from_collection_for_select(Tracker.order(:position), :id, :name, (@settings[:tracker_id].to_i rescue nil)), prompt: t(:prompt_please_select))
%p
  %label= l(:label_duration)
  = text_field_tag("settings[duration]", @settings[:duration], size: 5)
%p
  %label= l(:label_assigned_to)
  = select_tag("settings[assigned_to_id]", principals_options_for_select(Principal.active.sorted, Principal.find_by_id(@settings[:assigned_to_id])), prompt: t(:prompt_please_select))
